{
  "manifest_version": 2,
  "name": "Favorite Photos",
  "author": "Steve",
  "version": "1.0.1",
  "description": "Chrome extension demo project",
  "icons": {
    "16": "icons/heart-unfilled-16x16.png",
    "32": "icons/heart-unfilled-32x32.png",
    "128": "icons/heart-unfilled-128x128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}